<Window x:Class="_05_WPF_01_Hello_world.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_WPF_01_Hello_world"
        mc:Ignorable="d"
        Title="HelloWorldApp" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="InputTB"
                 HorizontalAlignment="Left"
                 Margin="248,237,0,0"
                 TextWrapping="Wrap"
                 Text="Piš sem"
                 VerticalAlignment="Top"
                 Width="120"
                 KeyDown="InputTB_KeyDown"
                 />

        <TextBox x:Name="OutputTB"
                 HorizontalAlignment="Left"
                 Margin="248,279,0,0"
                 TextWrapping="Wrap"
                 Text="TextBox"
                 VerticalAlignment="Top"
                 Width="120"
                 IsEnabled="False"/>

        <Button x:Name="MoveBtn"
                Content="Button"
                HorizontalAlignment="Left"
                Margin="418,237,0,0"
                VerticalAlignment="Top"
                Height="60"
                Width="72"
                Click="MoveBtn_Click"
                />

    </Grid>
</Window>
