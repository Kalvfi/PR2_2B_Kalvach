<Window x:Class="_05_WPF_07_Pexeso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_WPF_07_Pexeso"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="ConfigPanel"
              Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Column="0"
                     Grid.ColumnSpan="3"
                     Grid.Row="0"
                     Margin="5">
                <Label Content="Pexeso"/>
            </Viewbox>

            <Button Grid.Column="0" Grid.Row="1"
                    Content="2x2"
                    FontSize="30"
                    Margin="10"
                    Click="ConfigButton_Click"/>
            <Button Grid.Column="1" Grid.Row="1"
                    Content="4x4"
                    FontSize="30"
                    Margin="10"
                    Click="ConfigButton_Click"/>
            <Button Grid.Column="2" Grid.Row="1"
                    Content="6x4"
                    FontSize="30"
                    Margin="10"
                    Click="ConfigButton_Click"/>


        </Grid>
        <Grid x:Name="GamePanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="1">
                <Label x:Name="Score" Content="0"/>
            </Viewbox>

            <Grid x:Name="Board"></Grid>

        </Grid>
        <Grid x:Name="ResultsPanel"></Grid>
    </Grid>
</Window>
